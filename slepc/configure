#!/usr/bin/env python3

import os, sys

if sys.version_info < (3,4):
  print('*******************************************************************************')
  print('*           Python version 3.4+ is required to run ./configure                *')
  print('*******************************************************************************')
  sys.exit(4)

exec(open(os.path.join(os.path.dirname(__file__), 'config', 'configure.py')).read())
